@model List<AppUser>
@{
    ViewData["Title"] = "UserRoleList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>UserRoleList</h1>
<table class="table table-bordered">
    <tr>
        <th>User</th>
        <th>Add Role</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.UserName</td>
            <td><a href="/Admin/AdminRole/AssignRole/@item.Id" class="btn btn-outline-primary">Add Role</a></td>
        </tr>
    }
</table>
<a href="/Admin/AdminRole/Index">Back</a>
