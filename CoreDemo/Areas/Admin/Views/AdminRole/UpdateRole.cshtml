@model CoreDemo.Areas.Admin.Models.RoleUpdateViewModel
@{
    ViewData["Title"] = "UpdateRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Update Role Page</h1>
<form method="post">
    <div class="form-group">
        <label>Role ID</label>
        <input type="text" asp-for="Id" class="form-control" disabled/>
    </div>
    <div class="form-group">
        <label>Role Name</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <button class="btn btn-success">Update Role</button>
</form>