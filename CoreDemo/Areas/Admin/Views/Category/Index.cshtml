@using X.PagedList
@using X.PagedList.Mvc.Core

@model IPagedList<Category>
@* @model List<Category> *@
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h1>Category List</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Category Name</th>
        <th>Do Passive</th>
        <th>Do Active</th>
        <th>Edit</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.CategoryID</th>
            <td>@item.CategoryName</td>
            <td><a href="/Admin/Category/DeleteCategory/@item.CategoryID" id="DeleteBtn" 
                onclick="return confirm('Are you want to Delete?')" class="btn btn-info">DO PASSIVE</a></td>
            <td><a href="#" class="btn btn-primary">DO ACTIVE</a></td>
            <td><a href="#" class="btn btn-warning">Edit</a></td>
        </tr>
    }
</table>
<a href="/Admin/Category/AddCategory/" class="btn btn-primary">Add Category</a>
<br />
<br />
@Html.PagedListPager((IPagedList)Model,page=>Url.Action("Index",new{page}))